{
  "name": "ciphercorelink-lite-electron",
  "version": "1.0.0",
  "description": "CipherCoreLink-Lite â€” local AI OS (Electron + Node server)",
  "main": "electron-main.js",
  "scripts": {
    "start": "electron .",
    "dev": "NODE_ENV=development concurrently \"node server.js\" \"electron .\"",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "productName": "CipherCoreLink-Lite",
    "appId": "com.ciphercorelink.lite",
    "files": [
      "**/*"
    ],
    "directories": {
      "buildResources": "build"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    },
    "mac": {
      "target": "dmg"
    }
  },
  "author": "You",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.5",
    "dotenv": "^16.4.5",
    "winston": "^3.13.0"
  },
  "devDependencies": {
    "electron": "^26.2.0",
    "electron-builder": "^24.6.0",
    "concurrently": "^8.2.0"
  }
}